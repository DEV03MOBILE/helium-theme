<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="Sandbox"
        messagesPack="com.haulmont.addon.helium.web.screens.sandbox">
    <data>
        <collection id="usersDc"
                    class="com.haulmont.cuba.security.entity.User"
                    view="user.browse">

            <loader id="usersLoader"
                    dynamicAttributes="true">
                <query>
                    select u from sec$User u order by u.name
                </query>
            </loader>
        </collection>

        <collection id="groupsDc"
                    class="com.haulmont.cuba.security.entity.Group"
                    view="group.browse">
            <loader id="groupsLoader">
                <query>
                    select g from sec$Group g order by g.name
                </query>
            </loader>
        </collection>
    </data>

